<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema Aplikasi -->
    <style name="Theme." parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna Utama -->
        <item name="colorPrimary">#FD999B</item>
        <item name="colorPrimaryVariant">#E57373</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Warna Sekunder -->
        <item name="colorSecondary">#867DFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background -->
        <item name="android:windowBackground">@drawable/bg_gradient</item>

        <!-- Tombol -->
        <item name="materialButtonStyle">@style/CustomButton</item>
    </style>

    <!-- Style Button -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#7A1F03</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <!-- Warna isi tombol -->
        <item name="android:backgroundTint">#AC3D00</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- Border -->
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
        <item name="android:cornerRadius">24dp</item>
    </style>

    <style name="ButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>



</resources>
