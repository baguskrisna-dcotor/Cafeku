                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/image_shape"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

