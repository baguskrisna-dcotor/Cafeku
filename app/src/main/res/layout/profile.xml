                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:background="@drawable/baseline_settings_24" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end">

