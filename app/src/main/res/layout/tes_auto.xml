<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/nunitosans"
        android:text="Baru Ditambahkan"
        android:textColor="#373737"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/katalog1"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="19dp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgMenu1"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/shape"
                            android:clipToOutline="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/dummy" />

                        <TextView
                            android:id="@+id/txtMenu1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunitosans"
                            android:text="@string/Kentanggoreng"
                            android:textColor="#373737"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMenu1"
                            android:layout_width="65dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="@string/price"
                            android:textColor="#900E0E"
                            android:textSize="9sp"
                            app:backgroundTint="#FD999B"
                            app:iconPadding="0dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/katalog2"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="19dp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgMenu2"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/shape"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy" />

                        <TextView
                            android:id="@+id/txtMenu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunitosans"
                            android:text="@string/Kentanggoreng"
                            android:textColor="#373737"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMenu2"
                            android:layout_width="65dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="@string/price"
                            android:textColor="#900E0E"
                            android:textSize="9sp"
                            app:backgroundTint="#FD999B"
                            app:iconPadding="0dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/katalog3"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="19dp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgMenu3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/shape"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy" />

                        <TextView
                            android:id="@+id/txtMenu3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunitosans"
                            android:text="@string/Kentanggoreng"
                            android:textColor="#373737"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMenu3"
                            android:layout_width="65dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="@string/price"
                            android:textColor="#900E0E"
                            android:textSize="9sp"
                            app:backgroundTint="#FD999B"
                            app:iconPadding="0dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/katalog4"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="19dp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgMenu4"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/shape"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy" />

                        <TextView
                            android:id="@+id/txtMenu4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunitosans"
                            android:text="@string/Kentanggoreng"
                            android:textColor="#373737"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMenu4"
                            android:layout_width="65dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="@string/price"
                            android:textColor="#900E0E"
                            android:textSize="9sp"
                            app:backgroundTint="#FD999B"
                            app:iconPadding="0dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/katalog5"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="18dp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgMenu5"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/shape"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy" />

                        <TextView
                            android:id="@+id/txtMenu5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/nunitosans"
                            android:text="@string/Kentanggoreng"
                            android:textColor="#373737"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMenu5"
                            android:layout_width="65dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="@string/price"
                            android:textColor="#900E0E"
                            android:textSize="9sp"
                            app:backgroundTint="#FD999B"
                            app:iconPadding="0dp"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>