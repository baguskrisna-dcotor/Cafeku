<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoucherDetailActivity"
    android:background="@drawable/vcr_green">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40sp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp">

            <LinearLayout
                android:id="@+id/adpBG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1dp"
                android:orientation="vertical">

            </LinearLayout>

            <ImageView
            android:id="@+id/imgVoucher"
            android:layout_width="wrap_content"
            android:layout_height="170sp"
            android:src="@drawable/img_1"
            android:scaleType="fitCenter"
            android:layout_margin="20dp"
            />
        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1000sp"
                android:orientation="vertical"
                android:padding="20sp"
                android:paddingStart="20sp"
                android:background="@drawable/button_social_background">

        <TextView
            android:id="@+id/nameVoucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAMA VOUCHER"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="start" />


            <TextView
                android:id="@+id/deskripsi"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gunakan sekarang"
            app:backgroundTint="@null"
            android:background="@drawable/detail_chart"
            />


    </RelativeLayout>
</RelativeLayout>