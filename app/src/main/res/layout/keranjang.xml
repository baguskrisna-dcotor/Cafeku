<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/addproduct"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/mordngradient"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="+ PRODUK"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_radius_setting_2"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:id="@+id/txtpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="+ 00000 Point"
            android:textColor="@color/aurora_classic_center"
            android:textStyle="bold"
            android:fontFamily="@font/arvo"/>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginStart="10dp"
        android:id="@+id/recyclerViewCart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:elevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@drawable/gradientpofile"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <RadioGroup
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="10sp"
                    android:id="@+id/radioGroupvcr"
                    android:layout_width="600sp"
                    android:layout_height="30sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/uservcr1"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:button="@null"
                        android:gravity="center"
                        android:text="30% DISCON"
                        android:background="@drawable/vouchercheck"
                        android:textColor="@color/green_royal_start"
                        android:fontFamily="@font/poppins"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/usevcr2"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:button="@null"
                        android:text="15% DISCON"
                        android:gravity="center"
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/vouchercheck"
                        android:textColor="@color/green_royal_start"
                        android:textSize="13sp" />
                    <RadioButton
                        android:id="@+id/usevcr3"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="25% DISCON"
                        android:gravity="center"
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/vouchercheck"
                        android:textColor="@color/green_royal_start"
                        android:textSize="13sp" />
                    <RadioButton
                        android:id="@+id/usevcr4"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="14% DISCON"
                        android:gravity="center"
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/vouchercheck"
                        android:textColor="@color/green_royal_start"
                        android:textSize="13sp" />

                </RadioGroup>




            </LinearLayout>


        </HorizontalScrollView>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:textColor="#422B2B"
                    android:id="@+id/txtTotal"
                    android:text="Total: Rp 0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#9E9E9E"
                    android:id="@+id/datetime"
                    android:text="0000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckout"
                    app:backgroundTint="@null"
                    android:background="@drawable/detail_chart"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="BELI"/>
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>



</LinearLayout>
