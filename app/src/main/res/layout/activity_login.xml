<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_atas_login"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/atas_login"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/header_image" />


        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/img_atas_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Username / Phone number"
            android:inputType="text"
            android:background="@drawable/input_field_background"
            android:textColor="@android:color/black"
            android:textColorHint="#999999"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/tv_login_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/input_field_background"
            android:textColor="@android:color/black"
            android:textColorHint="#999999"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_username"
            app:layout_constraintStart_toStartOf="@id/et_username"
            app:layout_constraintEnd_toEndOf="@id/et_username" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="LOGIN"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_login_background"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/et_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <Button
            android:id="@+id/btn_social_google"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Continue With Google"
            android:textColor="#333333"
            android:textSize="16sp"
            android:background="@drawable/button_social_background"
            android:drawableEnd="@drawable/icon_google"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <Button
            android:id="@+id/btn_social_facebook"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Continue With Facebook"
            android:textColor="#333333"
            android:textSize="16sp"
            android:background="@drawable/button_social_background"
            android:drawableEnd="@drawable/icon_facebook"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/btn_social_google"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <Button
            android:id="@+id/btn_social_guest"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="Continue With Guest"
            android:textColor="#333333"
            android:textSize="16sp"
            android:background="@drawable/button_social_background"
            android:gravity="center_vertical|start"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/btn_social_facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />




        <ImageView
            android:id="@+id/img_bawah_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/bawah_login"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
