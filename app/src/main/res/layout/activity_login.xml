<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".LoginActivity"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/img_atas_login"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/atas_login"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradientlogin"
            android:orientation="vertical"
            android:layout_marginTop="130dp"
            >
                <ImageView
                    android:id="@+id/img_bawah_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bawah_login"
                    android:layout_marginBottom="0dp"
                    android:layout_alignParentBottom="true"
                    app:layout_constraintEnd_toEndOf="parent" />


                <TextView
                    android:id="@+id/tv_login_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cafeku"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="24dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/textRand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login dulu yuq"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/nunitosans"
                    android:textAlignment="center"
                    android:layout_below="@id/tv_login_title"/>


                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:hint="Username / Phone number"
                    android:inputType="text"
                    android:background="@drawable/modrngradient2"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_below="@id/textRand"/>


                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:gravity="center|start"
                    android:background="@drawable/modrngradient2"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/et_username"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_below="@+id/et_password"
                    android:layout_centerHorizontal="true"
                        >
                        <RadioGroup
                            android:layout_marginTop="8sp"
                            android:layout_marginBottom="10sp"
                            android:id="@+id/radioGroupOptions"
                            android:layout_width="300sp"
                            android:layout_height="30sp"
                            android:gravity="center"
                            android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/Female"
                                    android:layout_width="0sp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10sp"
                                    android:button="@null"
                                    android:text="Female"
                                    android:gravity="center"
                                    android:background="@drawable/radiobuttonhandler"
                                    android:textColor="@color/aurora_magenta_center"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/arvo"/>

                                <RadioButton
                                    android:id="@+id/Male"
                                    android:layout_width="0sp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:button="@null"
                                    android:text="Male"
                                    android:gravity="center"
                                    android:background="@drawable/radiobuttonhandler"
                                    android:textColor="@color/aurora_classic_center"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/arvo"/>
                        </RadioGroup>



                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/et_password"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="LOGIN"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="500dp"
            android:gravity="center"
            >


                <LinearLayout
                    android:id="@+id/btn_guest_login"
                    android:layout_width="260dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="30dp"
                    android:paddingEnd="24dp"
                    android:background="@drawable/button_social_background"
                    android:layout_marginBottom="8dp"
                    >
                        <!-- Teks -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Continue with Google"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto"/>
                        <!-- Logo Google -->
                        <ImageView
                            android:layout_marginStart="15dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_guest"
                            android:contentDescription="Google Logo" />
                </LinearLayout>



        </LinearLayout>








</RelativeLayout>
