<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".LoginActivity"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/img_atas_login"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/atas_login"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:orientation="vertical"
            >
        <ImageView
            android:id="@+id/img_bawah_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/bawah_login"
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="true"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="24dp"
            android:textAlignment="center"/>


        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Username / Phone number"
            android:inputType="text"
            android:background="@drawable/input_field_background"
            android:textColor="@android:color/black"
            android:textColorHint="#999999"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@id/tv_login_title"/>


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/input_field_background"
            android:textColor="@android:color/black"
            android:textColorHint="#999999"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="16dp"
            android:layout_below="@id/et_username"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LOGIN"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_login_background"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@id/et_password"/>


        <Button
            android:id="@+id/btn_social_google"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Continue With Google"
            android:textColor="#333333"
            android:textSize="16sp"
            android:background="@drawable/button_social_background"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_below="@id/btn_login"/>


        <Button
            android:id="@+id/btn_social_facebook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Continue With Facebook"
            android:textColor="#333333"
            android:textSize="16sp"
            android:background="@drawable/button_social_background"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@id/btn_social_google"/>


        <Button
            android:id="@+id/btn_social_guest"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Continue With Guest"
            android:textColor="#333333"
            android:textSize="16sp"
            android:background="@drawable/button_social_background"
            android:gravity="center_vertical|start"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@id/btn_social_facebook"
            app:layout_constraintTop_toBottomOf="@id/btn_social_facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />




        </RelativeLayout>


</LinearLayout>
